<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>full</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/apache-flume-1.5.0-bin</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <!-- XXX: Conflicting libraries -->
                <exclude>lib/commons-io-2.1.jar</exclude>
                <exclude>lib/commons-logging-1.1.1.jar</exclude>
                <exclude>lib/guava-11.0.2.jar</exclude>
                <exclude>lib/httpclient-4.3.3.jar</exclude>
                <exclude>lib/httpcore-4.2.4.jar</exclude>
                <exclude>lib/metrics-core-3.0.2.jar</exclude>
                <exclude>lib/netty-3.2.9.Final.jar</exclude>
                <exclude>lib/slf4j-log4j12-1.6.1.jar</exclude>
                <exclude>lib/zookeeper-3.3.6.jar</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <binaries>
                <outputDirectory>/lib</outputDirectory>
                <unpack>false</unpack>
                <includes>
                    <include>com.stratio.ingestion:*</include>
                </includes>
                <excludes>
                    <exclude>com.stratio.ingestion:stratio-ingestion-all</exclude>
                </excludes>
            </binaries>
        </moduleSet>
    </moduleSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>com.stratio.ingestion:*</exclude>
            </excludes>
            <useTransitiveDependencies>true</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
</assembly>